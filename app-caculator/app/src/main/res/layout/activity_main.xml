<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">


        <GridLayout

            android:columnCount="4"
            android:rowCount="5" >

            <Spinner android:id="@+id/skipto"
                android:layout_columnSpan="4"
                android:entries="@array/CaculatorType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Spinner>

            <EditText android:id="@+id/tv_edt"
                android:layout_width="325dp"
                android:layout_height="85dp"
                android:layout_columnSpan="4"

                >

            </EditText>

            <Button android:id="@+id/btnPlus"
                android:layout_height="60dp"
                android:layout_width="70dp"
                android:layout_margin="2dp"
                android:text="+">
            </Button>

            <Button android:id="@+id/btnSub"
                android:layout_height="60dp"
                android:layout_width="70dp"
                android:layout_margin="2dp"
                android:text="-">
            </Button>


            <Button android:id="@+id/btnMul"
                android:layout_margin="2dp"
                android:layout_height="60dp"
                android:layout_width="70dp"
                android:text="*">
            </Button>

            <Button android:id="@+id/btnDiv"
                android:layout_margin="2dp"
                android:layout_height="60dp"
                android:layout_width="70dp"
                android:text="/">
            </Button>



            <Button android:id="@+id/btn1"
                android:layout_height="60dp"
                android:layout_width="70dp"
                android:text="1">
            </Button>
            <Button android:id="@+id/btn2"
                android:layout_height="60dp"
                android:layout_width="70dp"
                android:text="2">
            </Button>
            <Button android:id="@+id/btn3"
                android:layout_height="60dp"
                android:layout_width="70dp"
                android:text="3">
            </Button>

            <Button android:id="@+id/btnDel"
                android:layout_margin="2dp"
                android:layout_height="60dp"
                android:layout_width="70dp"
                android:text="del">
            </Button>

            <Button android:id="@+id/btn4"
                android:layout_height="60dp"
                android:layout_width="70dp"
                android:text="4">
            </Button>
            <Button android:id="@+id/btn5"
                android:layout_height="60dp"
                android:layout_width="70dp"
                android:text="5">
            </Button>
            <Button android:id="@+id/btn6"
                android:layout_height="60dp"
                android:layout_width="70dp"
                android:text="6">
            </Button>


            <Button android:id="@+id/btnEqual"
                android:layout_height="180dp"
                android:layout_width="70dp"
                android:layout_rowSpan="3"
                android:text="="></Button>

            <Button android:id="@+id/btn7"
                android:layout_height="60dp"
                android:layout_width="70dp"
                android:text="7">
            </Button>
            <Button android:id="@+id/btn8"
                android:layout_height="60dp"
                android:layout_width="70dp"
                android:text="8">
            </Button>
            <Button android:id="@+id/btn9"
                android:layout_height="60dp"
                android:layout_width="70dp"
                android:text="9">
            </Button>





            <Button android:id="@+id/btnPoint"
                android:layout_height="60dp"
                android:layout_width="70dp"
                android:text=".">
            </Button>

            <Button android:id="@+id/btn0"
                android:layout_height="60dp"
                android:layout_width="70dp"
                android:text="0">
            </Button>

            <Button android:id="@+id/btnClear"
                android:layout_margin="2dp"
                android:layout_height="60dp"
                android:layout_width="70dp"
                android:text="c">
            </Button>


        </GridLayout>
    </GridLayout>
</ScrollView>