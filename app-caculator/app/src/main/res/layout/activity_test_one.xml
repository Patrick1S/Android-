<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TestOneActivity">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"


                android:columnCount="5"
                android:rowCount="5" >

                <Spinner android:id="@+id/skipto"
                    android:layout_columnSpan="5"
                    android:entries="@array/CaculatorType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                </Spinner>

                <EditText android:id="@+id/tv_edt"
                    android:layout_width="325dp"
                    android:layout_height="85dp"
                    android:layout_columnSpan="5"
                    >

                </EditText>

                <Button  android:id="@+id/btn_sin"
                    android:layout_margin="2dp"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="sin">
                </Button>

                <Button  android:id="@+id/btn_cos"
                    android:layout_margin="2dp"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="cos">
                </Button>

                <Button android:id="@+id/btn_tan"
                    android:layout_margin="2dp"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="tan">
                </Button>

                <Button android:id="@+id/btn_x2"
                    android:layout_margin="2dp"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="x²">
                </Button>


                <Button  android:id="@+id/btn_x3"
                    android:layout_margin="2dp"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="x³">
                </Button>

                <Button android:id="@+id/btn_sec"
                    android:layout_margin="2dp"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="sec">
                </Button>

                <Button android:id="@+id/btn_csc"
                    android:layout_margin="2dp"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="csc">
                </Button>



                <Button android:id="@+id/btn_cot"
                    android:layout_margin="2dp"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="cot">
                </Button>

                <Button android:id="@+id/btn_xy"
                    android:layout_margin="2dp"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="x^y">
                </Button>


                <Button android:id="@+id/btn_del"
                    android:layout_margin="2dp"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="del">
                </Button>

                <Button android:id="@+id/btn_xfzy"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="1/x">
                </Button>



                <Button android:id="@+id/btnLeftKh"
                    android:layout_margin="2dp"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:text="(">
                </Button>

                <Button android:id="@+id/btnRightKh"
                    android:layout_margin="2dp"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:text=")">
                </Button>



                <Button android:id="@+id/btnPlus"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="+">
                </Button>

                <Button android:id="@+id/btnClear"
                    android:layout_margin="2dp"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="c">
                </Button>

                <Button android:id="@+id/btn_xjc"
                    android:layout_margin="2dp"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="x!">
                </Button>


                <Button android:id="@+id/btn1"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="1">
                </Button>

            <Button
                android:id="@+id/btn2"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="10dp"></Button>

                <Button android:id="@+id/btn3"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="3">
                </Button>


                <Button android:id="@+id/btnSub"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="-">
                </Button>

                <Button android:id="@+id/btn_gh"
                    android:layout_margin="2dp"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="√">
                </Button>


                <Button android:id="@+id/btn4"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="4">
                </Button>
                <Button android:id="@+id/btn5"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="5">
                </Button>
                <Button android:id="@+id/btn6"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="6">
                </Button>

                <Button android:id="@+id/btnMul"
                    android:layout_margin="2dp"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="*">
                </Button>

                <Button android:id="@+id/btn_yghx"
                    android:layout_margin="2dp"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="y√x">
                </Button>



                <Button android:id="@+id/btn7"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="7">
                </Button>
                <Button android:id="@+id/btn8"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="8">
                </Button>
                <Button android:id="@+id/btn9"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="9">
                </Button>
                <Button android:id="@+id/btnDiv"
                    android:layout_margin="2dp"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="/">
                </Button>


            <Button
                android:id="@+id/btn_log"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="log"
                android:textSize="10dp"></Button>

                <Button android:id="@+id/btn_ln"
                    android:layout_margin="2dp"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="ln">
                </Button>



                <Button android:id="@+id/btn0"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text="0">
                </Button>
                <Button android:id="@+id/btnPoint"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:textSize="10dp"
                    android:text=".">
                </Button>

                <Button android:id="@+id/btnEqual"
                    android:layout_height="50dp"
                    android:layout_width="56dp"
                    android:layout_rowSpan="1"
                    android:textSize="10dp"
                    android:text="="></Button>


        </GridLayout>
    </ScrollView>